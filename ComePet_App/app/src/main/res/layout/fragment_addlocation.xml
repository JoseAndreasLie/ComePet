<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_beige"
    tools:context=".ui.post.addlocation.AddlocationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/custom_nav_post_cream"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/backButtonToUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_green_vector"
                    android:background="@null"
                    android:layout_marginStart="2dp"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white"
                android:hint="@string/search"
                android:padding="10dp"
                android:fontFamily="@font/merriweather_light"
                android:textSize="11dp"
                android:drawableLeft="@drawable/search"
                android:drawablePadding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="17dp">

            <TextView
                android:id="@+id/locationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/university"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:textSize="8sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="17dp">

            <TextView
                android:id="@+id/locationName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mountain"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address1"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:textSize="8sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="17dp">

            <TextView
                android:id="@+id/locationName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mountain1"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address2"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:textSize="8sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="17dp">

            <TextView
                android:id="@+id/locationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/university"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:textSize="8sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="17dp">

            <TextView
                android:id="@+id/locationName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mountain"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address1"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:textSize="8sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="17dp">

            <TextView
                android:id="@+id/locationName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mountain1"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address2"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:textSize="8sp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>